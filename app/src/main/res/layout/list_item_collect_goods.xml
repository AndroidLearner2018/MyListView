<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="143dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_item_edit_item1"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_edit_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="143dp"
            android:layout_height="143dp">

            <ImageView
                android:id="@+id/imgCover"
                android:layout_width="123dp"
                android:layout_height="123dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter" />
            <CheckBox
                android:visibility="gone"
                android:id="@+id/cb_collection_item"
                android:layout_centerInParent="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:drawableTop="@drawable/back_img_collect_item"
                android:drawablePadding="30dp"
                android:gravity="center_vertical"
                android:paddingTop="15dp"
                android:textColor="@color/simple_333333"
                android:textSize="16dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingTop="5dp">


            <TextView
                android:id="@+id/tvGoodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="移动"
                android:textColor="@color/simple_333333"
                android:textSize="14dp" />


            <LinearLayout
                android:id="@+id/tagView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"></LinearLayout>


            <TextView
                android:id="@+id/tvCommom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="移动"
                android:textColor="@color/guide_view_bg"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:text="50"
                    android:textColor="#ffE61E12"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvMarketPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toLeftOf="@+id/llCouponPrice"
                    android:layout_toRightOf="@+id/tvPrice"
                    android:gravity="bottom"
                    android:text="466666666666"
                    android:textColor="@color/guide_view_bg"
                    android:textSize="11dp" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:background="#88000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/menu_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>